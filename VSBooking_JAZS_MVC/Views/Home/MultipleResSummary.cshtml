@model VSBooking_JAZS_MVC.ViewModels.ResSummary

@{
    ViewBag.Title = "MultipleResSummary";
}

<div class="form-group">
    <div class="col-md-10">
        <h2><i class="fa fa-book"></i> Reservation summary</h2>
    </div>
    <div class="col-md-2">
        <input type="submit" value="Confirm reservation" class="btn btn-default" />
    </div>
</div>

@using (Html.BeginForm("ResConfirmation", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.Firstname, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Firstname, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Firstname, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Lastname, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Lastname, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Lastname, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Search" class="btn btn-default" />
            </div>
        </div>
    </div>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayName("Number")
            </th>
            <th>
                @Html.DisplayName("Description")
            </th>
            <th>
                @Html.DisplayName("Type")
            </th>
            <th>
                @Html.DisplayName("TV")
            </th>
            <th>
                @Html.DisplayName("WiFi")
            </th>
            <th>
                @Html.DisplayName("Parking")
            </th>
            <th>
                @Html.DisplayName("Hair dryer")
            </th>
            <th>
                @Html.DisplayName("Price")
            </th>
            <th></th>
        </tr>

        @for (int i = 0; i < Model.Rooms.Count(); i++)
        {
            <tr>

                @Html.HiddenFor(modelItem => Model.Rooms.ElementAt(i).IdRoom)

                <td>
                    @Html.HiddenFor(modelItem => Model.Rooms.ElementAt(i).Number)
                    @Html.DisplayFor(modelItem => Model.Rooms.ElementAt(i).Number)
                </td>
                <td>
                    @Html.HiddenFor(modelItem => Model.Rooms.ElementAt(i).Description)
                    @Html.DisplayFor(modelItem => Model.Rooms.ElementAt(i).Description)
                </td>
                <td>
                    @Html.HiddenFor(modelItem => Model.Rooms.ElementAt(i).Type)
                    @Html.DisplayFor(modelItem => Model.Rooms.ElementAt(i).Type)
                </td>
                <td>
                    @Html.HiddenFor(modelItem => Model.Rooms.ElementAt(i).Price)
                    @Html.DisplayFor(modelItem => Model.Rooms.ElementAt(i).Price)
                </td>
                <td>
                    @Html.HiddenFor(modelItem => Model.Rooms.ElementAt(i).HasTV)
                    @Html.DisplayFor(modelItem => Model.Rooms.ElementAt(i).HasTV)
                </td>
                <td>
                    @Html.HiddenFor(modelItem => Model.Rooms.ElementAt(i).HasHairDryer)
                    @Html.DisplayFor(modelItem => Model.Rooms.ElementAt(i).HasHairDryer)
                </td>
                <td>
                    @Html.HiddenFor(modelItem => Model.Rooms.ElementAt(i).Hotel.HasWiFi)
                    @Html.DisplayFor(modelItem => Model.Rooms.ElementAt(i).Hotel.HasWiFi)
                </td>
                <td>
                    @Html.HiddenFor(modelItem => Model.Rooms.ElementAt(i).Hotel.HasParking)
                    @Html.DisplayFor(modelItem => Model.Rooms.ElementAt(i).Hotel.HasParking)
                </td>
                <td>
                    @Html.HiddenFor(modelItem => Model.Rooms.ElementAt(i).Hotel.Name)
                    @Html.DisplayFor(modelItem => Model.Rooms.ElementAt(i).Hotel.Name)
                </td>
                <td>
                    @Html.HiddenFor(modelItem => Model.Rooms.ElementAt(i).Hotel.Location)
                    @Html.DisplayFor(modelItem => Model.Rooms.ElementAt(i).Hotel.Location)
                </td>
                <td>
                    @Html.ActionLink("Delete", "Delete", new { id = Model.Rooms.ElementAt(i).IdRoom })
                </td>
            </tr>
        }

        <tr>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td>
                Total price :
            </td>
            <td>
               @Html.DisplayFor(modelItem => Model.TotalPrice) CHF
            </td>
        </tr>

    </table>
    <br />

}
