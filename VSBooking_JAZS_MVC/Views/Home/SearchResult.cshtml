@model VSBooking_JAZS_MVC.ViewModels.SearchResultsVM

@{
    ViewBag.Title = "SearchResult";
}

<h2><i class="fa fa-bed"></i> Available rooms</h2>

@using (Html.BeginForm("MultipleResSummary", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <table class="table">
        <tr>
            <th></th>
            <th>
                @Html.DisplayName("Hotel")
            </th>
            <th>
                @Html.DisplayName("Location")
            </th>
            <th>
                @Html.DisplayName("Number")
            </th>
            <th>
                @Html.DisplayName("Type")
            </th>
            <th>
                @Html.DisplayName("TV")
            </th>
            <th>
                @Html.DisplayName("Hair dryer")
            </th>
            <th>
                @Html.DisplayName("WiFi")
            </th>
            <th>
                @Html.DisplayName("Parking")
            </th>
            <th>
                @Html.DisplayName("Price")
            </th>
            <th></th>
        </tr>

        @for (int i = 0; i < Model.SearchResult.Count(); i++)
        {
            <tr>
                @Html.HiddenFor(modelItem => Model.SearchResult.ElementAt(i).IdRoom)
                <td>
                    @Html.CheckBoxFor(modelItem => Model.SearchResult.ElementAt(i).Book)
                </td>
                <td>
                    @Html.HiddenFor(modelItem => Model.SearchResult.ElementAt(i).HotelName)
                    @Html.DisplayFor(modelItem => Model.SearchResult.ElementAt(i).HotelName)
                </td>
                <td>
                    @Html.HiddenFor(modelItem => Model.SearchResult.ElementAt(i).Location)
                    @Html.DisplayFor(modelItem => Model.SearchResult.ElementAt(i).Location)
                </td>
                <td>
                    @Html.HiddenFor(modelItem => Model.SearchResult.ElementAt(i).Number)
                    @Html.DisplayFor(modelItem => Model.SearchResult.ElementAt(i).Number)
                </td>
                <td>
                    @Html.HiddenFor(modelItem => Model.SearchResult.ElementAt(i).Type)
                    @Html.DisplayFor(modelItem => Model.SearchResult.ElementAt(i).Type)
                </td>
                <td>
                    @Html.HiddenFor(modelItem => Model.SearchResult.ElementAt(i).HasTV)
                    @Html.DisplayFor(modelItem => Model.SearchResult.ElementAt(i).HasTV)
                </td>
                <td>
                    @Html.HiddenFor(modelItem => Model.SearchResult.ElementAt(i).HasHairDryer)
                    @Html.DisplayFor(modelItem => Model.SearchResult.ElementAt(i).HasHairDryer)
                </td>
                <td>
                    @Html.HiddenFor(modelItem => Model.SearchResult.ElementAt(i).HasWiFi)
                    @Html.DisplayFor(modelItem => Model.SearchResult.ElementAt(i).HasWiFi)
                </td>
                <td>
                    @Html.HiddenFor(modelItem => Model.SearchResult.ElementAt(i).HasParking)
                    @Html.DisplayFor(modelItem => Model.SearchResult.ElementAt(i).HasParking)
                </td>
                <td>
                    @Html.HiddenFor(modelItem => Model.SearchResult.ElementAt(i).Price)
                    @Html.DisplayFor(modelItem => Model.SearchResult.ElementAt(i).Price) CHF
                </td>
                <td>
                    @Html.ActionLink("Details", "RoomDetails", new { id= Model.SearchResult.ElementAt(i).IdRoom })
                </td>
            </tr>
        }

    </table>

    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="Book" class="btn btn-default" />
        </div>
    </div>
}
