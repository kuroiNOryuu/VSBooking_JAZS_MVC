@model VSBooking_JAZS_MVC.ViewModels.ReservationVM

@{
    ViewBag.Title = "CancelReservation";
}

<h2>Reservation canceled</h2>
<p>Reservation reference: @Html.DisplayFor(model => model.ReservationId)</p>
<p>@Html.DisplayFor(model => model.Firstname) @Html.DisplayFor(model => model.Lastname),</p>
<p>you have succesfully cancelled the following reservation:</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Period")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rooms.ElementAt(0).Number)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rooms.ElementAt(0).Type)
        </th>
        <th>
            @Html.DisplayNameFor(modelItem => Model.Rooms.ElementAt(0).Hotel.Name)
        </th>
        <th>
            @Html.DisplayNameFor(modelItem => Model.Rooms.ElementAt(0).Hotel.Location)
        </th>
        <th>
            @Html.DisplayNameFor(modelItem => Model.Rooms.ElementAt(0).Price)
        </th>
        <th></th>
    </tr>

    @for (int i = 0; i < Model.Rooms.Count(); i++)
    {
        <tr>

            @Html.HiddenFor(modelItem => Model.Rooms[i].IdRoom)

            <td>
                @Html.DisplayFor(model => model.StartDate) to @Html.DisplayFor(model => model.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.Rooms.ElementAt(i).Number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.Rooms.ElementAt(i).Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.Rooms.ElementAt(i).Hotel.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.Rooms.ElementAt(i).Hotel.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.Rooms.ElementAt(i).Price)
            </td>
        </tr>
    }

</table>

@Html.ActionLink("Search another room", "Search")
